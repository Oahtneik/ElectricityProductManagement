<Window x:Class="SalesManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SalesManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Background="#333" Height="50">
                <Button Content="Customer List" Click="CustomerListButton_Click" Margin="10" />
                <Button Content="Manage customers" Click="CustomerManageButton_Click" Margin="10" />
                <Button Content="Search customer" Click="CustomerSearchButton_Click" Margin="10" />
                <Button Content="Manage orders" Click="OrderManageButton_Click" Margin="10" />
                <Button Content="Create order" Click="CreateOrderButton_Click" Margin="10" />
                <Button Content="Edit profile" Click="EditProfileButton_Click" Margin="10" />
                <Button Content="List Product"  Margin="10" Click="Button_Click" />

            </StackPanel>
            <Frame Name="MainFrame" NavigationUIVisibility="Hidden" />
        </DockPanel>
    </Grid>
</Window>
